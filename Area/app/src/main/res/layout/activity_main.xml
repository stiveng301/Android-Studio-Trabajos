<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:orientation="vertical"
    android:background="@drawable/img1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:hint="@string/ladoUno" />
    <EditText
        android:id="@+id/valorLadoUno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:hint="@string/valorUno" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:hint="@string/ladoDos" />

    <EditText
        android:id="@+id/valorLadoDos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:hint="@string/valorDos" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:hint="@string/baseUno" />

    <EditText
        android:id="@+id/baseUno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/valorBaseUno"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:hint="@string/alturaUno" />

    <EditText
        android:id="@+id/altUno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/valorAlturaUno"
        android:textAlignment="center" />


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/radioAreaRectangulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Área rectángulo" />

        <RadioButton
            android:id="@+id/radioAreaTriangulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Área triángulo" />
    </RadioGroup>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:onClick="calcularAreas"
        android:text="@string/send" />

    <TextView
        android:id="@+id/resultado"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultado"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/img" />
</LinearLayout>
